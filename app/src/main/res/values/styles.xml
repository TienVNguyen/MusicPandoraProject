<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RelativeLayoutBasic" parent="Base.Theme.AppCompat.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="LinearLayoutBasic" parent="Base.Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_padding</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_padding</item>
        <item name="android:paddingRight">@dimen/activity_vertical_padding</item>
    </style>

    <style name="ListViewBasic" parent="Base.Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewBasic" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/activity_vertical_padding</item>
        <item name="android:textSize">@dimen/text_view_basic</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewForRelativeLayout" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/activity_horizontal_padding</item>
    </style>

    <style name="TextLinkForRelativeLayout" parent="TextAppearance.AppCompat.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/activity_horizontal_padding</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ButtonBasic" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/button_basic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ImageViewBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ImageViewForRelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/activity_horizontal_padding</item>
    </style>
</resources>